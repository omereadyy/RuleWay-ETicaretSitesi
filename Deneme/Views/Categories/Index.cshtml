@model IEnumerable<Deneme.Models.Category>

@{
    ViewData["Title"] = "Kategori Yönetimi";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-tags"></i> Kategori Yönetimi</h2>
    <a asp-action="Create" class="btn btn-success">
        <i class="fas fa-plus"></i> Yeni Kategori
    </a>
</div>

<!-- Başarı/Hata Mesajları -->
@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle"></i> @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-circle"></i> @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Kategori Tablosu -->
<div class="card">
    <div class="card-body">
        @if (!Model.Any())
        {
            <div class="text-center py-5">
                <i class="fas fa-tags fa-3x text-muted mb-3"></i>
                <h4 class="text-muted">Kategori bulunamadı</h4>
                <p class="text-muted">Henüz hiç kategori eklenmemiş.</p>
                <a asp-action="Create" class="btn btn-success">
                    <i class="fas fa-plus"></i> İlk Kategorinizi Ekleyin
                </a>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Kategori Adı</th>
                            <th>Açıklama</th>
                            <th>Min. Stok</th>
                            <th>Ürün Sayısı</th>
                            <th width="200">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@Html.DisplayFor(modelItem => item.Name)</strong>
                                </td>
                                <td>
                                    @if (string.IsNullOrEmpty(item.Description))
                                    {
                                        <em class="text-muted">-</em>
                                    }
                                    else
                                    {
                                        @(item.Description.Length > 50 ? item.Description.Substring(0, 50) + "..." : item.Description)
                                    }
                                </td>
                                <td>
                                    <span class="badge bg-info">@Html.DisplayFor(modelItem => item.MinimumStockQuantity)</span>
                                </td>
                                <td>
                                    @if (item.Products.Any())
                                    {
                                        <span class="badge bg-primary">@item.Products.Count() ürün</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Ürün yok</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info" title="Detaylar">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning" title="Düzenle">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        @if (!item.Products.Any())
                                        {
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger" title="Sil">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        }
                                        else
                                        {
                                            <button class="btn btn-outline-secondary" disabled title="Bu kategoriye ait ürünler var">
                                                <i class="fas fa-ban"></i>
                                            </button>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>