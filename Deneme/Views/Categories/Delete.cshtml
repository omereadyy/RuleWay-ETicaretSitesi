@model Deneme.Models.Category

@{
    ViewData["Title"] = "Kategori Sil";
}

<div class="row">
    <div class="col-md-6 mx-auto">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h4><i class="fas fa-trash"></i> Kategori Silme Onayı</h4>
            </div>
            <div class="card-body">
                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger" role="alert">
                        <i class="fas fa-exclamation-circle"></i> @TempData["Error"]
                    </div>
                }

                @if (Model.Products.Any())
                {
                    <div class="alert alert-warning" role="alert">
                        <i class="fas fa-exclamation-triangle"></i>
                        <strong>Uyarı!</strong> Bu kategoriye ait @Model.Products.Count() ürün bulunmaktadır. 
                        Kategoriyi silmek için önce bu ürünleri silin veya başka kategoriye taşıyın.
                    </div>

                    <h6>Bu kategorideki ürünler:</h6>
                    <ul class="list-group mb-3">
                        @foreach (var product in Model.Products.OrderBy(p => p.Title))
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                @product.Title
                                <a asp-controller="Products" asp-action="Edit" asp-route-id="@product.Id" 
                                   class="btn btn-sm btn-outline-primary">
                                    Düzenle
                                </a>
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <div class="alert alert-danger" role="alert">
                        <i class="fas fa-exclamation-triangle"></i>
                        <strong>Uyarı!</strong> Bu işlem geri alınamaz. Kategoriyi silmek istediğinizden emin misiniz?
                    </div>

                    <h5>Silinecek Kategori:</h5>
                    <dl class="row">
                        <dt class="col-sm-4">Kategori Adı:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>

                        <dt class="col-sm-4">Açıklama:</dt>
                        <dd class="col-sm-8">
                            @if (string.IsNullOrEmpty(Model.Description))
                            {
                                <em class="text-muted">-</em>
                            }
                            else
                            {
                                @Html.DisplayFor(model => model.Description)
                            }
                        </dd>

                        <dt class="col-sm-4">Min. Stok:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.MinimumStockQuantity) adet</dd>
                    </dl>
                }

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Geri Dön
                    </a>
                    
                    @if (!Model.Products.Any())
                    {
                        <form asp-action="Delete" method="post" class="d-inline">
                            <input type="hidden" asp-for="Id" />
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Evet, Sil
                            </button>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>