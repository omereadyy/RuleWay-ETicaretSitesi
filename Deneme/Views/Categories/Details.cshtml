@model Deneme.Models.Category

@{
    ViewData["Title"] = "Kategori Detay";
}

<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="card">
            <div class="card-header">
                <h4><i class="fas fa-info-circle"></i> Kategori Detayları</h4>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">Kategori Adı:</dt>
                    <dd class="col-sm-9">
                        <h5><span class="badge bg-info fs-6">@Html.DisplayFor(model => model.Name)</span></h5>
                    </dd>

                    <dt class="col-sm-3">Açıklama:</dt>
                    <dd class="col-sm-9">
                        @if (string.IsNullOrEmpty(Model.Description))
                        {
                            <em class="text-muted">Açıklama bulunmuyor</em>
                        }
                        else
                        {
                            @Html.DisplayFor(model => model.Description)
                        }
                    </dd>

                    <dt class="col-sm-3">Min. Stok Seviyesi:</dt>
                    <dd class="col-sm-9">
                        <span class="badge bg-warning fs-6">@Html.DisplayFor(model => model.MinimumStockQuantity) adet</span>
                    </dd>

                    <dt class="col-sm-3">Ürün Sayısı:</dt>
                    <dd class="col-sm-9">
                        @if (Model.Products.Any())
                        {
                            <span class="badge bg-primary fs-6">@Model.Products.Count() ürün</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary fs-6">Ürün bulunmuyor</span>
                        }
                    </dd>
                </dl>

                @if (Model.Products.Any())
                {
                    <hr>
                    <h5><i class="fas fa-box"></i> Bu Kategorideki Ürünler</h5>
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Ürün Adı</th>
                                    <th>Stok</th>
                                    <th>Durum</th>
                                    <th>İşlem</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var product in Model.Products.OrderBy(p => p.Title))
                                {
                                    <tr>
                                        <td>@product.Title</td>
                                        <td>
                                            @if (product.StockQuantity < Model.MinimumStockQuantity)
                                            {
                                                <span class="badge bg-danger">@product.StockQuantity</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-success">@product.StockQuantity</span>
                                            }
                                        </td>
                                        <td>
                                            @if (product.IsPublished)
                                            {
                                                <span class="badge bg-success"><i class="fas fa-check"></i></span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-warning"><i class="fas fa-pause"></i></span>
                                            }
                                        </td>
                                        <td>
                                            <a asp-controller="Products" asp-action="Details" asp-route-id="@product.Id" 
                                               class="btn btn-sm btn-outline-info">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Geri Dön
                    </a>
                    <div>
                        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning me-2">
                            <i class="fas fa-edit"></i> Düzenle
                        </a>
                        @if (Model?.Products?.Any() != true)
                        {
                            <a asp-action="Delete" asp-route-id="@Model?.Id" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Sil
                            </a>
                        }
                        else
                        {
                            <button class="btn btn-secondary" disabled title="Bu kategoriye ait ürünler var">
                                <i class="fas fa-ban"></i> Silinemez
                            </button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>