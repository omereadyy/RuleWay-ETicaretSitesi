@model Deneme.Models.Product

@{
    ViewData["Title"] = "Ürün Sil";
}

<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h4><i class="fas fa-trash"></i> Ürün Silme Onayı</h4>
            </div>
            <div class="card-body">
                <div class="alert alert-danger" role="alert">
                    <i class="fas fa-exclamation-triangle"></i>
                    <strong>Uyarı!</strong> Bu işlem geri alınamaz. Ürünü silmek istediğinizden emin misiniz?
                </div>

                <h5>Silinecek Ürün:</h5>
                <dl class="row">
                    <dt class="col-sm-3">Başlık:</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Title)</dd>

                    <dt class="col-sm-3">Kategori:</dt>
                    <dd class="col-sm-9">
                        <span class="badge bg-info">@Html.DisplayFor(model => model.Category.Name)</span>
                    </dd>

                    <dt class="col-sm-3">Stok:</dt>
                    <dd class="col-sm-9">
                        @if (Model.StockQuantity < Model.Category.MinimumStockQuantity)
                        {
                            <span class="badge bg-danger">@Html.DisplayFor(model => model.StockQuantity) adet</span>
                        }
                        else
                        {
                            <span class="badge bg-success">@Html.DisplayFor(model => model.StockQuantity) adet</span>
                        }
                    </dd>

                    <dt class="col-sm-3">Durum:</dt>
                    <dd class="col-sm-9">
                        @if (Model.IsPublished)
                        {
                            <span class="badge bg-success"><i class="fas fa-check"></i> Yayında</span>
                        }
                        else
                        {
                            <span class="badge bg-warning"><i class="fas fa-pause"></i> Taslak</span>
                        }
                    </dd>

                    <dt class="col-sm-3">Oluşturulma:</dt>
                    <dd class="col-sm-9">@Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")</dd>
                </dl>

                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> İptal
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Evet, Sil
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>